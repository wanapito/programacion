/**
 *
 * @author Ivan
 */
public class capitulo6 {

    public static void main(String arg[]) {
        /*
        tipos primitivos enteros :
        byte short int long
        byte es el mas peque√±o 8 bit
        short 16 bit
        int (entero) 32 bit 
        long 64 bit
         */
//entre parentesis obliga a byte aunque no pertenezca devolvera un valor aproximado
        byte numeroByte = (byte) 129;
        System.out.println("valor byte " + numeroByte);
        //imprime valor minimos byte
        System.out.println("valor minimo byte" + Byte.MIN_VALUE);
        //imprime valor maximo byte
        System.out.println("valor maximo byte " + Byte.MAX_VALUE);

        short numeroShort = 32767;
        //soutv imprime valor ultima variable
        System.out.println("numeroShort = " + numeroShort);
        //imprime valor minimo short
        System.out.println("valor minimo short: " + Short.MIN_VALUE);
        //imprime valor maximo short
        System.out.println("valor maximo short:" + Short.MAX_VALUE);

        int numeroInt = 10;
        /*aunque intentemos forzar un numero mas alto con (int)dara error
        si introcimos una "L" se convierte en long (32 bit)
         */
        System.out.println("numeroInt = " + numeroInt);
        //imprime valor minimo int (integer)
        System.out.println("valor minimo int :" + Integer.MIN_VALUE);
        //imprime valor maximo int (integer)
        System.out.println("valor maximo int:" + Integer.MAX_VALUE);

        long numeroLong = 10;
        /*aunque intentemos forzar un numero mas alto con (long)dara error
        si introcimos una "D o F" se convierte en long (32 bit)
         */

        System.out.println("numeroLong = " + numeroLong);
        //imprime valor minimos de long
        System.out.println("valor minimo long:" + Long.MIN_VALUE);
        //imprime valor maximo long
        System.out.println("valor maximor long :" + Long.MAX_VALUE);
    }

}

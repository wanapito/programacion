 */
public class capitulo7 {

    public static void main(String args[]) {
        /*
        tipos primmitivos de tipo flotante 
        float 32 bit 
        double 64 bit
         */
        // indicamos entre parentesis la conversion (float)
        // si no salimos del limite se puede convertir con una "D" al final indicando (float)
        float numeroFloat = (float) 10.0;
        System.out.println("numeroFloat = " + numeroFloat);
        System.out.println("valor minimos float :" + Float.MIN_VALUE);
                System.out.println("valor maximo float:" + Float.MAX_VALUE);
        
        // si no salimos del limite se puede convertir con una "D" al final indicando (float)
        double numeroDouble =10;
        System.out.println("numeroDouble = " + numeroDouble);
        System.out.println("valor minimo double " + Double.MIN_VALUE);
        System.out.println("valor maximos double " + Double.MAX_VALUE);
        
        
    }
}
